<h3>Sign In With Username</h3>

<%= form_with(url: login_path) do |form| %>


  <div class="mb-3">
    <%= form.label :username%>
    <%= form.text_field :username, class: "form-control", placeholder: "username" %>
  </div>

  <div class="mb-3">
    <%= form.submit "Sign In", class: "btn btn-primary" %>
  </div>
   <p>New user? <%= link_to "Sign up now!", new_user_path %></p>
  <% end %>
