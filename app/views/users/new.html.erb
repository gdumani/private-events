<div class="container-fluid ">
<h1 class="fw-normal text-secondary mt-3">Sign Up</h1>
<%= form_with model:@user, url:users_path do |form| %>
<%= render "shared/form_errors", form: form %> 
 
<div class="col-sm-6 col-lg-auto" > 
  <div class="card">
    <div class="card-body center bg-light">

  <div class="mb-3">
    <%= form.label :username %>
    <%= form.text_field :username, class: "form-control", placeholder: "username" %>
  </div>

  <div class="mb-3">
    <%= form.label :email %>
    <%= form.text_field :email, class: "form-control", placeholder: "user@mail" %>
  </div>

  <div class="mb-3">
    <%= form.submit "Sign Up", class: "btn btn-primary" %>
  </div>

    </div>
  </div>
</div>
<% end %>
</div>